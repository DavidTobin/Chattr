extends layout

block content 
  section.messages-container
    .messages
      ul

    .messages-info

    .message-input
      form(method="post")#send-message
        input(type="text", name="message", placeholder='Enter a message...', autocomplete="off")

  aside.online-list
    h2
      | Online 
      small#online-count (0)
    hr
    .online-users
      ul

    .login-as
      form(method="post")#set-name
        input#login-name(type='text', placeholder='John Doe', autocomplete="off")
        button.login Set Name
    div(style='clear: both;')  

  script(type="text/javascript", src="http://localhost:3002/socket.io/socket.io.js", defer=true)
  script(type="text/javascript", src="/javascripts/app.js", defer=true)
    
